{
  "manifest_version": 3,
  "name": "YouTube Music Pronunciation",
  "version": "1.0",
  "description": "Add lyrics pronunciation support to YouTube Music, making non-Latin lyrics readable in Roman script",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://music.youtube.com/*",
    "https://translate.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
